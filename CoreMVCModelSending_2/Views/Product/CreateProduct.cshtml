@model Product

<form asp-controller="Product" asp-action="CreateProduct" method="post">

    <div>
        <input type="text" asp-for="ProductName" placeholder="Lutfen ürün ismi giriniz" class="form-control"/>
    </div>

    <div>
        <input type="number" asp-for="UnitPrice" placeholder="Lutfen fiyat giriniz" class="form-control" />
    </div>


    <button class="btn btn-primary">Ekle</button>


    @* <input type="submit" /> => Post etmekle görevli bir buttondur. Eger button tag'i acıyorsanız tipini belirtmeye gerek yoktur otomatik olarak post etme görevine sahiptir...Eger bir buttonun post etmesini istemiyorsanız tipine (input olarak actıgınız Tag'in tipine) button yazmanız yeterlidir *@




</form>